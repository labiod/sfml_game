{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-c",
                "-I./include",
                "source/*",
                "-std=c++11"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "linker",
            "type": "shell",
            "command": "g++",
            "args": [
                "*.o",
                "-o",
                "sfml-app",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "gcc compile"
            ]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./sfml-app ",
            "dependsOn": [
                "linker"
            ],
            "problemMatcher": []
        }
    ]
}